{
	"name": "sams-rpc",
	"version": "0.0.1",
	"author": "terijaki",
	"description": "Type-safe RPC for interacting with the SAMS-Server XML API.",
	"repository": {
		"url": "https://github.com/terijaki/sams-rpc"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"exports": {
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"files": [
		"dist",
		"README.md"
	],
	"keywords": [
		"Volleyball",
		"SAMS",
		"XML"
	],
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"test": "bun test --env-file .env.local"
	},
	"type": "module",
	"types": "dist/index.d.ts",
	"release": {
		"branches": [
			"main",
			"next"
		]
	},
	"dependencies": {
		"fast-xml-parser": "^5.2.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"semantic-release": "^24.2.3",
		"tsup": "^8.4.0"
	},
	"peerDependencies": {
		"typescript": "^5.8.3"
	}
}
